<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.jwtdemo.dao.SysPermissionDao">

    <select id="getList" resultType="com.example.jwtdemo.entity.SysPermission">
        select * from
        sys_menu
    </select>

    <select id="getListByRoleId" resultType="com.example.jwtdemo.entity.SysPermission" parameterType="string">
        select
        m.id,
        m.parent_id,
        m.name,
        m.type,
        m.path,
        m.permission,
        m.order_num,
        m.disable
        from
        sys_role_menu rm
        left join
        sys_menu m
        on rm.role_id=m.id
        where role_id=#{roleId}
    </select>

</mapper>